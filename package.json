{
  "name": "agent-observer",
  "version": "1.1.0",
  "description": "Agent Office â€” 3D observability for AI agents",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "lint": "pnpm run lint:desktop",
    "lint:desktop": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "lint:web": "pnpm -C web run lint",
    "typecheck": "tsc -b",
    "package": "electron-vite build && electron-builder --mac --dir",
    "package:dmg": "electron-vite build && electron-builder --mac dmg",
    "test:smoke": "pnpm build && playwright test -c playwright.smoke.config.ts",
    "test:coverage": "pnpm exec c8 --report-dir coverage --reporter=text-summary --reporter=lcov --reporter=json-summary playwright test -c playwright.smoke.config.ts --grep-invert \"desktop smoke flows\"",
    "postinstall": "electron-rebuild -f -w node-pty",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Webrenew",
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/webrenew/agent-observer.git"
  },
  "bugs": {
    "url": "https://github.com/webrenew/agent-observer/issues"
  },
  "homepage": "https://github.com/webrenew/agent-observer#readme",
  "engines": {
    "node": ">=22 <23",
    "pnpm": ">=10.12.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "node-pty"
    ]
  },
  "dependencies": {
    "@memories.sh/cli": "^0.7.6",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@monaco-editor/react": "^4.7.0",
    "@react-three/drei": "^10.0.0",
    "@react-three/fiber": "^9.1.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "monaco-editor": "^0.55.1",
    "node-pty": "^1.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "three": "^0.182.0",
    "typescript-language-server": "^5.1.3",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-langservers-extracted": "^4.10.0",
    "vscode-languageserver-protocol": "^3.17.5",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.19.11",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@types/three": "^0.182.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "c8": "^10.1.3",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "electron-vite": "^3.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.0",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.webrenew.agent-observer",
    "productName": "Agent Observer",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "dir",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Agent Observer",
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/node-pty",
        "to": "node_modules/node-pty",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/@memories.sh/cli",
        "to": "node_modules/@memories.sh/cli",
        "filter": [
          "dist/**/*",
          "package.json"
        ]
      }
    ]
  }
}
